@using DotNetNotes.Models
@model IEnumerable<DotNetNotes.Models.Note>

<h2>All Notes</h2>
<div>
  <div class="col-lg-12 col-md-12">
      <div class="container">
      <div class="row">
        <div>
            <a asp-action="Create"  asp-controller="Note" class="btn btn-success">New Note</a>
        </div>
  </div>
  </div>
  <hr>
  <div class="container">
      <div class="row">
        <div>
            Order by: 
            <a asp-action=""  asp-controller="Note" class="btn btn-default">Title</a>
            <a asp-action=""  asp-controller="Note" class="btn btn-default">Creation Date</a>
            <a asp-action=""  asp-controller="Note" class="btn btn-default">Due Date</a>
            <a asp-action=""  asp-controller="Note" class="btn btn-default">Priority</a>
            <a asp-action=""  asp-controller="Note" class="btn btn-primary showlink">Hide Finished</a>
        </div>
  </div>
  </div>
  <hr>
    @foreach (var item in Model)
    {
        <div class="container">
        <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Due: @item.DueDate &emsp; <strong>@item.Title</strong> &emsp; <repeat n="@item.Priority"></repeat>
               <a class="btn btn-default showlink" data-toggle="collapse" data-target="#panelcontent-@item.Id">Show</a>
            </div>
            <div id="panelcontent-@item.Id" class="panel-body collapse">
                @item.Text <br /><br />
                &emsp;<a asp-action="Edit" aps-controller="Note" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                &emsp;<a asp-action="Delete" asp-controller="Note" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
        </div>
        </div>
    }
  </div>
</div>
